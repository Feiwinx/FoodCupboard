<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sammobewick.pocketkitchen">

    <!-- Permissions: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!-- Generated by Google Sign In -->
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:enabled="true"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Meta Data -->
        <meta-data
            android:name="xmashapekey"
            android:value="89uaBM1DYFmshbBN98rIAI62xuB2p1ZF3rfjsnWxuvaM0RPHpi" />
        <meta-data
            android:name="recipe_image_url"
            android:value="https://spoonacular.com/recipeImages/" />
        <meta-data
            android:name="com.google.android.apps.drive.APP_ID"
            android:value="BA:85:A6:39:71:5C:A7:28:12:7B:02:E4:F3:42:11:F0:C8:53:7B:88" />

        <!-- Activities -->
        <activity
            android:name=".activities_fragments.SplashActivity"
            android:theme="@style/SplashScreen">

            <!-- Set this as our first activity -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Other Activities (General): -->
        <activity android:name=".activities_fragments.TutorialActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/title_activity_tutorial" />
        <activity
            android:name=".activities_fragments.TabbedActivity"
            android:icon="@drawable/ic_pocket_kitchen_logo"
            android:label="@string/title_activity_tabbed"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities_fragments.MySettingsActivity"
            android:icon="@drawable/ic_settings"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".activities_fragments.TabbedActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities_fragments.ViewSingleRecipeActivity"
            android:icon="@drawable/ic_my_recipes"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities_fragments.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities_fragments.MySavedRecipesActivity"
            android:icon="@drawable/ic_star"
            android:label="@string/title_activity_saved"
            android:parentActivityName=".activities_fragments.TabbedActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities_fragments.AdvancedSearchActivity"
            android:icon="@drawable/ic_search"
            android:label="@string/title_activity_search"
            android:parentActivityName=".activities_fragments.TabbedActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activities_fragments.AddRecipeActivity"
            android:icon="@drawable/ic_add"
            android:label="@string/title_activity_add_recipe"
            android:parentActivityName=".activities_fragments.TabbedActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateUnchanged"/>

        <!-- Drive Activities: -->
        <activity android:name=".communication.SaveDriveActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".communication.LoadDriveActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".communication.DeleteDriveActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- AWS Intent Services: -->
        <service android:name=".aws_intents.Dynamo_Download_Json" android:enabled="true" />
        <service android:name=".aws_intents.Dynamo_Upload_Json" android:enabled="true" />
        <service android:name=".aws_intents.Dynamo_Delete_Json" android:enabled="true" />
        <service android:name=".aws_intents.S3_Download_Image" android:enabled="true" />
        <service android:name=".aws_intents.S3_Upload_Image" android:enabled="true" />
        <service android:name=".aws_intents.S3_Delete_Image" android:enabled="true" />
        <service android:name="com.amazonaws.mobileconnectors.s3.transferutility.TransferService" android:enabled="true" />
    </application>
</manifest>