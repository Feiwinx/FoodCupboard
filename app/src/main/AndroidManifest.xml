<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sammobewick.pocketkitchen">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="xmashapekey"
            android:value="89uaBM1DYFmshbBN98rIAI62xuB2p1ZF3rfjsnWxuvaM0RPHpi" />
        <meta-data
            android:name="recipe_image_url"
            android:value="https://spoonacular.com/recipeImages/" />

        <activity
            android:name=".core.SplashActivity"
            android:theme="@style/SplashScreen">

            <!-- Here we are setting our launcher activity. -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".core.TabbedActivity"
            android:label="@string/title_activity_tabbed"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".core.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".core.TabbedActivity" />

        <activity
            android:name=".core.RecipeActivity"
            android:parentActivityName="sammobewick.pocketkitchen.core.TabbedActivity" />

        <activity android:name=".core.LoginActivity" />
    </application>

</manifest>