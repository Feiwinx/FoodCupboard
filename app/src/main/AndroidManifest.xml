<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sammobewick.pocketkitchen">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="xmashapekey"
            android:value="89uaBM1DYFmshbBN98rIAI62xuB2p1ZF3rfjsnWxuvaM0RPHpi" />
        <meta-data
            android:name="recipe_image_url"
            android:value="https://spoonacular.com/recipeImages/" />
        <meta-data
            android:name="com.google.android.apps.drive.APP_ID"
            android:value="BA:85:A6:39:71:5C:A7:28:12:7B:02:E4:F3:42:11:F0:C8:53:7B:88" />

        <activity
            android:name=".core.SplashActivity"
            android:theme="@style/SplashScreen">

            <!-- Here we are setting our launcher activity. -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".core.TabbedActivity"
            android:icon="@drawable/ic_pocket_kitchen_full"
            android:label="@string/title_activity_tabbed"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".core.MySettingsActivity"
            android:icon="@drawable/ic_settings"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".core.TabbedActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".core.ViewSingleRecipeActivity"
            android:icon="@drawable/ic_my_recipes"
            android:parentActivityName=".core.TabbedActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".core.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".core.MySavedRecipesActivity"
            android:icon="@drawable/ic_star"
            android:label="@string/title_activity_saved"
            android:parentActivityName=".core.TabbedActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".communication.SaveDriveActivity" />
        <activity
            android:name=".core.AdvancedSearchActivity"
            android:icon="@drawable/ic_search"
            android:label="@string/title_activity_search"
            android:parentActivityName=".core.TabbedActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".core.AddRecipeActivity"
            android:icon="@drawable/ic_add"
            android:label="@string/title_activity_add_recipe"
            android:parentActivityName=".core.TabbedActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateUnchanged"/>
    </application>

</manifest>