<resources xmlns:android="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colourPrim</item>
        <item name="colorPrimaryDark">@color/colourPrimDark</item>
        <item name="colorAccent">@color/colourAccent</item>
        <item name="android:windowBackground">@color/colourPrimaryBackground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colourPrim</item>
        <item name="colorPrimaryDark">@color/colourPrimDark</item>
        <item name="colorAccent">@color/colourAccent</item>
        <item name="android:windowBackground">@color/colourPrimaryBackground</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colourPrim</item>
        <item name="colorPrimaryDark">@color/colourPrimDark</item>
        <item name="colorAccent">@color/colourAccent</item>
        <item name="android:windowBackground">@color/colourPrimaryBackground</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Theme for basic dialogs: -->
    <style name="myDialog" parent="Theme.AppCompat.Dialog.Alert" />

    <!-- Theme for all buttons: -->
    <style name="primLight_ImgBtn" parent="android:Widget.ImageButton">
        <item name="backgroundTint">@color/btn_states</item>
    </style>

    <style name="primLight_Btn" parent="android:Widget.Button">
        <item name="backgroundTint">@color/btn_states</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="transparent_ImgBtn" parent="Base.Widget.AppCompat.ImageButton">
        <item name="backgroundTint">@color/transparent</item>
    </style>

    <!-- This style allows a specific button to be resized without issue.
         See AddRecipe.xml for the case. This shouldn't be used anywhere else!
    -->
    <style name="primLight_ImgBtn_AR" parent="Widget.AppCompat.ImageButton">
        <item name="backgroundTint">@color/colourPrimLight</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- We use a style for our Splash Screen so it loads instantly -->
    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>
