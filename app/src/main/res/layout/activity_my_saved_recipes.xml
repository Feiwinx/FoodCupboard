<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sammobewick.pocketkitchen.activities_fragments.MyKitchenFragment">

    <ListView
        android:id="@+id/saved_recipes_list"

        android:layout_marginBottom="20dp"

        android:dividerHeight="4dp"
        android:transcriptMode="alwaysScroll"
        android:focusable="true"

        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/saved_recipes_empty"
        android:text="@string/empty_saved_recipes"

        android:textStyle="italic"
        android:gravity="center"
        android:layout_margin="10dp"
        android:focusable="false"
        android:clickable="false"

        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        style="?android:progressBarStyleLarge"
        android:progressDrawable="@drawable/progress"
        android:indeterminateDrawable="@drawable/progress"
        android:id="@+id/saved_recipes_progress"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>