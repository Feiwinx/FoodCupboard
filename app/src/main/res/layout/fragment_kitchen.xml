<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sammobewick.pocketkitchen.core.KitchenFragment">

    <SearchView android:id="@+id/kitchen_search"

        android:queryHint="@string/hint_search_kitchen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/kitchen_list"

        android:layout_below="@id/kitchen_search"
        android:layout_marginBottom="20dp"

        android:divider="@color/white"
        android:dividerHeight="4px"
        android:transcriptMode="alwaysScroll"

        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/empty_kitchen"
        android:text="@string/empty_kitchen"

        android:textStyle="italic"
        android:gravity="center"
        android:layout_margin="10dp"
        android:focusable="false"
        android:clickable="false"

        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
