<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:background="@color/background_floating_material_light"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--
        This XML file the dialog box for when the user clicks "New Quote"
    -->
    <TextView android:id="@+id/txt_shopping_item"
        android:text="@string/lbl_item"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"

        android:layout_margin="5dp"
        android:gravity="center"

        android:layout_width="80dp"
        android:layout_height="80dp" />

    <EditText android:id="@+id/edit_shopping_item"
        android:textSize="18sp"
        android:inputType="textAutoCorrect|textShortMessage"
        android:hint="@string/hint_item"

        android:layout_margin="5dp"
        android:layout_toRightOf="@id/txt_shopping_item"
        android:layout_toEndOf="@id/txt_shopping_item"
        android:gravity="center_vertical"

        android:layout_width="fill_parent"
        android:layout_height="80dp" />

    <TextView android:id="@+id/txt_measurement"
        android:text="@string/lbl_measurement"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"

        android:gravity="center"
        android:layout_margin="5dp"
        android:layout_below="@id/txt_shopping_item"

        android:layout_width="80dp"
        android:layout_height="40dp" />

    <!--
        You can nest layouts, and whilst it's not necessary here, it does help keep the
        group of buttons together.
    -->
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_below="@id/txt_measurement"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button android:id="@+id/btn_discard"
            android:text="@string/action_cancel"
            android:textColor="@color/white"
            android:background="@color/dim_foreground_material_dark"
            android:gravity="center"

            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent" />

        <Space
            android:layout_width="50dp"
            android:layout_height="match_parent" />

        <Button android:id="@+id/btn_add"
            android:text="@string/action_save"
            android:textColor="@color/white"
            android:background="@color/dim_foreground_material_dark"
            android:gravity="center"

            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent" />

    </LinearLayout>

    <Spinner android:id="@+id/measurements_spinner"
        android:gravity="center"
        android:hint="@string/hint_measurement"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/txt_measurement"
        android:layout_alignLeft="@+id/edit_shopping_item"
        android:layout_alignStart="@+id/edit_shopping_item" />
</RelativeLayout>