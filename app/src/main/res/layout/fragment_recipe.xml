<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sammobewick.pocketkitchen.core.RecipeFragment">

    <!-- Linear layout allows for search bar + list together -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SearchView android:id="@+id/recipe_search"

            android:queryHint="@string/hint_searchview"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView android:id="@+id/recipe_list"
            android:divider="@color/white"
            android:dividerHeight="4px"

            android:layout_gravity="start"
            android:isScrollContainer="true"

            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <!-- TextView for when list is empty -->
    <TextView
        android:id="@+id/empty_recipe"
        android:text="@string/empty_recipes"

        android:textSize="20sp"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_margin="10dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
