<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sammobewick.pocketkitchen.activities_fragments.MyKitchenFragment">

    <SearchView
        android:id="@+id/kitchen_search"

        android:queryHint="@string/hint_search_kitchen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/kitchen_list"

        android:layout_below="@id/kitchen_search"
        android:layout_marginBottom="20dp"

        android:dividerHeight="4dp"
        android:transcriptMode="alwaysScroll"

        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- TextView for when list is empty -->
    <TextView
        android:id="@+id/empty_kitchen"
        android:text="@string/empty_kitchen"
        android:textSize="@dimen/hdr_text_size"

        android:layout_below="@id/kitchen_search"
        android:textStyle="italic"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:focusable="false"
        android:clickable="false"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
