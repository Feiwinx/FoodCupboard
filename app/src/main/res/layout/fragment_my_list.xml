<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sammobewick.pocketkitchen.core.MyListFragment">

    <SearchView
        android:id="@+id/shopping_search"

        android:queryHint="@string/hint_search_shopping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/shopping_list"
        android:dividerHeight="4dp"

        android:layout_below="@id/shopping_search"
        android:layout_marginBottom="?android:attr/listPreferredItemHeight"

        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- TextView for when list is empty -->
    <TextView
        android:id="@+id/empty_shopping"
        android:text="@string/empty_list"

        android:layout_below="@id/shopping_search"

        android:textStyle="italic"
        android:gravity="center"
        android:layout_margin="10dp"
        android:focusable="false"
        android:clickable="false"

        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
